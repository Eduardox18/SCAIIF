<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vista.controlador.ReservarParaAlumnoController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <GridPane prefHeight="96.0" prefWidth="640.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Matrícula:" />
                  <Label text="Nombre:" GridPane.rowIndex="1" />
                  <Label text="Correo electrónico:" GridPane.rowIndex="2" />
                  <Label fx:id="labelMatricula" text="Label" GridPane.columnIndex="1" />
                  <Label fx:id="labelNombre" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label fx:id="labelMail" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <Separator prefWidth="200.0">
               <padding>
                  <Insets bottom="30.0" />
               </padding>
            </Separator>
            <TableView fx:id="tablaActividades" prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TableColumn fx:id="colNombre" prefWidth="75.0" text="Nombre" />
                <TableColumn fx:id="colFecha" prefWidth="101.0" text="Fecha" />
                  <TableColumn fx:id="colinicio" prefWidth="101.0" text="Hora inicio" />
                  <TableColumn fx:id="colFin" prefWidth="101.0" text="Hora fin" />
                  <TableColumn fx:id="colAsesor" prefWidth="101.0" text="Asesor" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox prefHeight="44.0" prefWidth="640.0" VBox.vgrow="NEVER">
               <children>
                  <JFXButton fx:id="botonCancelar" onAction="#accionRegresar" prefHeight="52.0" prefWidth="176.0" ripplerFill="#55f8ff" style="-fx-background-color: #0f9d58;" text="Cancelar" textFill="WHITE">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </JFXButton>
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <JFXButton fx:id="botonReservar" prefHeight="52.0" prefWidth="179.0" ripplerFill="#55f8ff" style="-fx-background-color: #082F8A;" text="Reservar" textFill="WHITE">
                     <font>
                        <Font size="25.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
