<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Actividad">
    
    <select id="recuperarActividadesAsesor" parameterType="int" resultType="servicios.pojos.Actividad">
        SELECT nombre FROM actividad WHERE noPersonal = #{noPersonal};
    </select>
    
</mapper>